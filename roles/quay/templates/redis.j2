apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  namespace: "{{ meta.namespace }}"
  name: quay-redis
  labels:
    quay-component: redis
spec:
  replicas: 1
  selector:
    matchLabels:  
      quay-component: redis
  template:
    metadata:
      namespace: "{{ meta.namespace }}"
      labels:
        quay-component: redis
    spec:
      containers:
      - name: redis-master
        image: redis
        ports:
        - containerPort: 6379
